{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "plugin:import/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "key-spacing": "off",
    "react/jsx-boolean-value": [
      2,
      "always"
    ],
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "react/jsx-indent": [
      2,
      2
    ],
    "comma-dangle": "off"
  }
}
